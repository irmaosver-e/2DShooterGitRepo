<?xml version="1.0" encoding="utf-8"?>

<!--
Callback List
menuToPlay / pauseToMain / gameOverToMain = 1
exitFromMenu / resumePlay / restartPlay = 2
-->

<STATES>
    <MENU>
		<STAGE>
			<map filename="mainMenu.tmx"/>
		</STAGE>
		<SOUND>
		    <music subpath="music/" filename="DST_ElectroRock.ogg" musicID= "music1"/>
			<sfx subpath="fx/" filename="ButtonSelect.wav" sfxID= "buttonSelect_SFX"/>
			<!--
			<sfx subpath="assets/" filename="fx.wav" sfxID= "sfx1"/>
			-->
		</SOUND>	
    </MENU> 
	
    <PLAY stageID="1">
		<STAGE subpath="">
			<map filename="stage1.tmx"/>
		</STAGE>
		<SOUND>
		    <music subpath="music/" filename="DST_ElectroRock.ogg" musicID= "music1"/>
			<sfx filename="boom.wav" sfxID= "explode"/>
			<sfx filename="phaser.wav" sfxID= "shoot"/>
			<!--
			<sfx subpath="assets/" filename="fx.wav" sfxID= "sfx1"/>
			-->
		</SOUND>
    </PLAY>
	
	<PLAY stageID="2">
		<STAGE subpath="">
			<map filename="stage2.tmx"/>
		</STAGE>
		<SOUND>
		    <music subpath="music/" filename="DST_ElectroRock.ogg" musicID= "music1"/>
			<sfx filename="boom.wav" sfxID= "explode"/>
			<sfx filename="phaser.wav" sfxID= "shoot"/>
			<!--
			<sfx subpath="assets/" filename="fx.wav" sfxID= "sfx1"/>
			-->
		</SOUND>
    </PLAY>
    
    <PAUSE>
        <STAGE>
			<map filename="pauseMenu.tmx"/>
		</STAGE>
		<SOUND>
		    <music subpath="music/" filename="DST_ElectroRock.ogg" musicID= "music1"/>
			<sfx subpath="fx/" filename="ButtonSelect.wav" sfxID= "buttonSelect_SFX"/>
			<sfx filename="pause.mp3" sfxID= "pause"/>
			<sfx filename="unpause.mp3" sfxID= "unPause"/>
			<!--
			<sfx subpath="assets/" filename="fx.wav" sfxID= "sfx1"/>
			-->
		</SOUND>
    </PAUSE>
    
    <GAMEOVER>
		<STAGE>
			<map filename="gameOverMenu.tmx" />
		</STAGE>
		<SOUND>
		    <music subpath="music/" filename="DST_ElectroRock.ogg" musicID= "music1"/>
			<sfx subpath="fx/" filename="ButtonSelect.wav" sfxID= "buttonSelect_SFX"/>
			<!--
			<sfx subpath="assets/" filename="fx.wav" sfxID= "sfx1"/>
			-->
		</SOUND>	
    </GAMEOVER>
</STATES>